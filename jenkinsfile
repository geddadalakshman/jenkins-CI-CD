pipeline {
    agent { label 'terraform' }
    stages {
        stage ('one'){
            input {
                message "Should we continue?"
                ok "Yes, we should."
                submitter "alice,bob"
            }
            steps{
                echo "one"
            }
        }
        stage ('two'){
            steps{
                echo "two"
            }
        }
    }
    post {
        failure {
            echo 'I will always say Hello again!'
        }
    }
}
